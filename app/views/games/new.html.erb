<h1>New game!</h1>
<p><%= @letters %></p>

<form action="/games/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <label>What is the longest word you can find?</label>
  <input type="text" name="word" placeholder="Guess a word">
  <input type="submit" value="Play">
</form>
